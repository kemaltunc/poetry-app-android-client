<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tunc.androidpoetryapp.customviews.ClassicTextView
        android:id="@+id/label_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takip"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tunc.androidpoetryapp.customviews.ClassicTextView
        android:id="@+id/follow_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="107"
        app:layout_constraintEnd_toEndOf="@+id/label_follow"
        app:layout_constraintStart_toStartOf="@+id/label_follow"
        app:layout_constraintTop_toBottomOf="@+id/label_follow" />

</androidx.constraintlayout.widget.ConstraintLayout>